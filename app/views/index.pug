extends ./layout.pug

block title
    title Login Page

block content
    #login
        form.form-horizontal(method='post', action='/users/signin')
            h2.form-signin-heading Login
            .form-group
                label(class='col-sm-2 control-label',for='inputUsername') Username
                .col-sm-10
                    input(type='text', name='username',id='inputUsername',class='form-control',placeholder='Username', required)
            .form-group
                label(class='col-sm-2 control-label', for='inputPassword') Password
                .col-sm-10
                    input(type='password', name='password',id='inputPassword',class='form-control',placeholder='Password', required)
            .form-group
                div(class='col-sm-offset-2 col-sm-10')
                    input(type='submit',class='btn btn-lg btn-primary btn-block', value='Sign In')