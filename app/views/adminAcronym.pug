extends ./layout.pug

block head
  link(rel='stylesheet',href='../../css/admin.css',media='screen')

block title
  title Acronym Edition

block content
  include ./nav.pug
  form(action='/admin/acronym/')#reload-page-form
  div.container#adminAcronymEdit
    h1
      i.glyphicon.glyphicon-wrench
      abbr(title='Manage Acronym') MA
    div.row
      div.col-xs-12
        div.table-responsive
          table(class='table' style='max-height:420px;')
            thead
              tr
                th(width='10%') Acronym
                th Definition
                th
                th
            tbody
              each acronym, i in acronyms
                tr(id=acronym.id)
                  td(width='10%').acronym-name #{acronym.name}
                  td.acronym-definition #{acronym.description}
                  td(width='5%')
                    i.edit-acronym.glyphicon.glyphicon-edit
                  td(width='5%')
                    i.delete-acronym.glyphicon.glyphicon-remove
    div.row.component-row
      div.col-xs-12.col-sm-2
        button#update-acronyms.btn.btn-primary
          echo Save
      div.col-xs-12.col-sm-2
        button#add-acronym.btn.btn-primary
          echo Add
    div#acronym-edit-panel.panel.panel-default
      div.panel-heading
        echo Add an acronym
      div.panel-body
        form#acronym-changes-form
          input(type="hidden" value="")#edit-acronym-action
          input(type="hidden" value="")#edit-acronym-id
          div.row.component-row
            div.col-xs-12
              input(type='text' name='acronyme' placeholder='Acronyme')#edit-acronym-input.full-width
            div.col-xs-12
              input(type='text' name='definition' placeholder='DÃ©finition')#edit-definition-input.full-width
            div.col-xs-12
              input(type='submit' value='Save')#save-acronym-changes.btn.btn-primary.full-width
            div.col-xs-12
              button#cancel-acronym-changes.btn.btn-primary.full-width
                echo Cancel
block footer
  script(src='../../js/admin.js')
